<div class="border rounded-lg shadow-md">
    <%= if @loading? do %>
        <div class="text-gray-400 p-6 text-center italic">
            Calculatingâ€¦
        </div>
    <% end %>

    <%= if @context.location do %>
        <%= for pass <- @passes do %>
            <.live_component module={PassItem} id={"pass-item-#{pass.id}"} pass={pass} now={@now} context={@context} />
        <% end %>
    <% else %>
        <div class="p-6">
            <%= live_component LocationSetter, id: "location-setter", context: @context, redirect: Routes.dashboard_path(@socket, :show), show_log_in_link?: true %>
        </div>
    <% end %>
</div>